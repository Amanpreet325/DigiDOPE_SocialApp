<% include ./partials/header.ejs %>

<div class="profile w-full min-h-screen bg-gradient-to-r from-red-700 to-red-900 text-white pt-1">
  <div class="max-w-lg mx-auto bg-zinc-700 p-8 rounded-lg shadow-lg">
    <h2 class="text-2xl font-semibold mb-4">Edit Bio</h2>
    <form action="/editbio" method="POST">
      <!-- Bio -->
      <div class="mb-4">
        <label for="bio" class="block text-sm font-medium mb-1">Bio:</label>
        <input type="text" id="bio" name="bio" value="<%= user.bio %>" class="w-full px-4 py-2 rounded-lg bg-zinc-200 text-black focus:outline-none focus:ring focus:border-red-700">
      </div>
      <!-- Username -->
      <div class="mb-4">
        <label for="username" class="block text-sm font-medium mb-1">Username:</label>
        <input type="text" id="username" name="username" value="<%= user.username %>" class="w-full px-4 py-2 rounded-lg bg-zinc-200 text-black focus:outline-none focus:ring focus:border-red-700">
      </div>

      <!-- Submit Button -->
      <button type="submit" class="w-full bg-red-700 hover:bg-red-800 text-white font-semibold py-2 px-4 rounded-lg transition duration-300">Update Bio</button>
    </form>
  </div>
</div>

<% include ./partials/footer.ejs %>
