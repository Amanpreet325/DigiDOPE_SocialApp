<%  include ./partials/header.ejs %>

    <div class="profile w-full min-h-screen bg-zinc-800 text-white pt-1">
        <form id="uploadform" hidden action="/fileupload" method="post" enctype="multipart/form-data">
            
            <input type="file" name="image">
            
        </form>
        
        <div class="profdets flex flex-col items-center mt-32">
            <div class="relative">
                <span class="w-[32px] h-[32px] absolute bottom-0 right-0 rounded-full flex items-center justify-center bg-red-700">
                    <i id="uploadicon"   class="text-zinc-800 ri-pencil-fill"></i>
                </span>
                                                        
            <div class="w-[14vh] h-[14vh] bg-zinc-200 rounded-full overflow-hidden"> 
                <img class="w-full h-full  object-cover overflow-hidden " src="/images/uploads/<%= user.profileImage  %>" alt="">
            </div>
        </div>
        <% if (user.role === 'volunteer') { %>
            <h1>Welcome, Volunteer!</h1>
            <!-- Volunteer-specific UI here -->
          <% } else if (user.role === 'club') { %>
            <h1>Welcome, Club Member!</h1>
            <!-- Club-specific UI here -->
          <% } else if (user.role === 'sponsor') { %>
            <h1>Welcome, Sponsor!</h1>
            <!-- Sponsor-specific UI here -->
          <% } else { %>
            <h1>Welcome, User!</h1>
          <% } %>
          
            <h1 class="text-2xl  font-semibold"><%= user.username  %></h1>
            <h3 class="text-md"><%= user.email  %></h3>
            <h5 class="px-7 py-2 bg-zinc-700 rounded-full text-xs font-semibold mt-2"><%= user.bio  %></h5>
            <a href="/editbio" class="px-7 py-2 bg-zinc-700 rounded-full text-xs font-semibold mt-2">EDIT</a>
            <a href="/add" class="px-10 py-2 rounded-lg bg-red-700 text-xs font-semibold mt-5">ADD NEW POST</a>
        </div>
        <div class="cards flex flex-wrap gap-10 px-10 mt-8 ">
            <div class="card min-w-fit h-full bg-zinc-900 rounded-lg overflow-hidden">
                <div class="w-[14rem] h-[10rem] bg-zinc-200 rounded-lg overflow-hidden" href="/show">
                    <img class="w-full h-full object-cover " src="/images/uploads/<%= user?.posts[0]?.image  %>"  alt="">
                </div>
                <h3 class="text-xl font-semibold mt-3"><a href="/show/posts">Your Uploaded Posts</a></h3>
                <h5 class="text-sm font-medium opacity-60"><%= user.posts.length %> pins</h5>
        </div>
            
          </div>
    </div>
    <script>
        document.querySelector("#uploadicon").addEventListener("click",function(){
            document.querySelector("#uploadform input").click();
        })
        document.querySelector("#uploadform input").addEventListener("change",function(){
            document.querySelector("#uploadform").submit();
        })
    
    </script>
</body>
</html>